{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <div class="col-12">
                            {{ form_row(form.productName) }}
                            {{ form_row(form.productDesc) }}
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    <div class="container mt-4 text-center">
                        <div class="col-12">
                            <button class="btn btn-primary">Enregistrer</button>
                            <a class="btn btn-primary" href="{{ path('admin') }}">Annuler</a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
